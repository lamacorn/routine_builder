<!-- Validation failure messages -->
<% if @routine.present? %>
  <% if @routine.errors.any? %>
    <% @routine.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
