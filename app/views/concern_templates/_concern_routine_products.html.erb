<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Routine Products

    <a data-toggle="collapse" href="#concern_routine_products_new_form">
      Add routine product
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @concern.routine_products.each do |routine_product| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/routine_products/<%= routine_product.id %>">
          <%= routine_product.routine_id %>
        </a>

        <a href="/delete_routine_product_from_primary_concern/<%= routine_product.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="concern_routine_products_new_form">
        <%= render partial: "concern_templates/concern_routine_products_new_form" %>
      </div>
    </div>

  </ul>
</div>
