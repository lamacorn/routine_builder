<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All routine products
    </h1>

    <a href="/routine_products/new" class="btn btn-block btn-outline-secondary">
      Add a new routine product
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "routine_product_templates/routine_products_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Routine
        </th>

        <th>
          Product
        </th>

        <th>
          Special note
        </th>

        <th>
          Time of day
        </th>

        <th>
          Use frequency
        </th>

        <th>
          Primary concern
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @routine_products.each do |routine_product| %>
      <tr>
        <td>
          <%= routine_product.id %>
        </td>

        <td>
          <% if routine_product.routine.present? %>
            <a href="/routines/<%= routine_product.routine.id %>">
              <%= routine_product.routine.customer_id %>
            </a>
          <% end %>
        </td>

        <td>
          <% if routine_product.product.present? %>
            <a href="/products/<%= routine_product.product.id %>">
              <%= routine_product.product.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= routine_product.special_note %>
        </td>

        <td>
          <%= routine_product.time_of_day %>
        </td>

        <td>
          <%= routine_product.use_frequency %>
        </td>

        <td>
          <% if routine_product.primary_concern.present? %>
            <a href="/concerns/<%= routine_product.primary_concern.id %>">
              <%= routine_product.primary_concern.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(routine_product.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(routine_product.updated_at) %> ago
        </td>

        <td>
          <a href="/routine_products/<%= routine_product.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @routine_products, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
