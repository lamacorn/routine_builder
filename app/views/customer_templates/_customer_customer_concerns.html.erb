<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Customer Concerns

    <a data-toggle="collapse" href="#customer_customer_concerns_new_form">
      Add customer concern
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @customer.customer_concerns.each do |customer_concern| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/customer_concerns/<%= customer_concern.id %>">
          <%= customer_concern.customer_id %>
        </a>
        <!-- Show link end -->

      </li>
    <% end %>

  </ul>
</div>
