<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All customers
    </h1>

    <a href="/customers/new" class="btn btn-block btn-outline-secondary">
      Add a new customer
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Phonenumber
        </th>

        <th>
          Firstname
        </th>

        <th>
          Lastname
        </th>

        <th>
          Optin texts
        </th>

        <th>
          Optin email
        </th>

        <th>
          Date firstconsultation
        </th>

        <th>
          Date lastconsultation
        </th>

        <th>
          Address street
        </th>

        <th>
          Address city
        </th>

        <th>
          Address state
        </th>

        <th>
          Address zipcode
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @customers.each do |customer| %>
      <tr>
        <td>
          <%= customer.id %>
        </td>

        <td>
          <%= customer.email %>
        </td>

        <td>
          <%= customer.password %>
        </td>

        <td>
          <%= customer.phonenumber %>
        </td>

        <td>
          <%= customer.firstname %>
        </td>

        <td>
          <%= customer.lastname %>
        </td>

        <td>
          <%= customer.optin_texts %>
        </td>

        <td>
          <%= customer.optin_email %>
        </td>

        <td>
          <%= customer.date_firstconsultation %>
        </td>

        <td>
          <%= customer.date_lastconsultation %>
        </td>

        <td>
          <%= customer.address_street %>
        </td>

        <td>
          <%= customer.address_city %>
        </td>

        <td>
          <%= customer.address_state %>
        </td>

        <td>
          <%= customer.address_zipcode %>
        </td>

        <td>
          <%= time_ago_in_words(customer.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(customer.updated_at) %> ago
        </td>

        <td>
          <a href="/customers/<%= customer.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @customers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
